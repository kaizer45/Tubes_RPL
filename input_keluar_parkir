    public void konekDB(){
        try{
            Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
            koneksi = DriverManager.getConnection("jdbc:mysql://localhost:3306/db_tubes","root","");
            stat = koneksi.createStatement();
        }
        catch(Exception e){
            System.err.println("Error : "+e.getMessage());
        }
    }
    public void user(){
        Date now = new Date();
        SimpleDateFormat formatter = new SimpleDateFormat("EEEEEE");
	String text = formatter.format(now);
        try{
        konekDB();
        String sql = "select username from login where hari_kerja = '"+text+"' and Shift = '"+jLabel12.getText()+"';";
        ResultSet rs = stat.executeQuery(sql);
        if(rs.next()){
            jLabel11.setText(rs.getString("username"));
        }
        rs.close();
        }
        catch(Exception e){
            javax.swing.JOptionPane.showMessageDialog(null, "Error:"+e.getMessage());
        }
    }
    public void tgl_skrg(){
        Date now = new Date();
        SimpleDateFormat format = new SimpleDateFormat("yyyy-MM-dd");
        String tglm = format.format(now);
        jTextField6.setText(format.format(now));
    }
    public void waktu_skrg(){
        Date now = new Date();
        Format formatter = new SimpleDateFormat("hh:mm:ss");
        String s = formatter.format(now);
        jTextField3.setText(s);
    }
    public void shift(){
        Date now = new Date();
        SimpleDateFormat sdf = new SimpleDateFormat("HH:mm:ss");
        String s = sdf.format(now);
        try{
            Date date = sdf.parse(s);
            Calendar cal = GregorianCalendar.getInstance();
            cal.setTime(date);
            int h = cal.get(Calendar.HOUR);
            if(h > 15){
                jLabel12.setText("Shift 1");
            }
            else if(h < 15){
                jLabel12.setText("Shift 2");
            }
        }
        catch(Exception e){
            
        }
    }
    public void total_price(String masuk, String keluar, String hrg){
        Double price = Double.parseDouble(hrg);
        int cek, temp;
        SimpleDateFormat sdf = new SimpleDateFormat("HH:mm:ss");
        try{
            Date date1 = sdf.parse(masuk);
            Date date2 = sdf.parse(keluar);
            Calendar cal1 = GregorianCalendar.getInstance();
            Calendar cal2 = GregorianCalendar.getInstance();
            cal1.setTime(date1);
            cal2.setTime(date2);
            int h1 = cal1.get(Calendar.HOUR);
            int h2 = cal2.get(Calendar.HOUR);
            int m1 = cal1.get(Calendar.MINUTE);
            int m2 = cal2.get(Calendar.MINUTE);
            temp = h2 - h1;
            cek = m2 - m1;
            if(temp > 0){
                result = temp * price;
                if(cek > 30){
                    result = result + price;
                }
            }
            else{
                result = price;
            }
            jTextField5.setText(Double.toString(result));
        }
        catch(Exception e){
            
        }
    }
    
