    public void waktu_skrg(){
        Date now = new Date();
        Format formatter = new SimpleDateFormat("hh:mm:ss");
        String s = formatter.format(now);
        jTextField2.setText(s);
    }
    public void konekDB(){
        try{
            Class.forName("sun.jdbc.odbc.JdbcOdbcDriver");
            koneksi = DriverManager.getConnection("jdbc:mysql://localhost:3306/db_tubes","root","");
            stat = koneksi.createStatement();
        }
        catch(Exception e){
            System.err.println("Error : "+e.getMessage());
        }
    }
    public void clear(){
        jTextField1.setText("");
        waktu_skrg();
    }
    public void insert(){
        plat = jTextField1.getText();
        jenis = (String)jComboBox1.getSelectedItem();
        jam = jTextField2.getText();
        try{
            konekDB();
            String sql = "insert into form_kendaraan values('"+plat+"', '"+jenis+"', '"+jam+"');";
            stat.executeUpdate(sql);
            stat.close();
            clear();
        }
        catch(Exception e){
            
        }
    }
